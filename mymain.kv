<Welcome>
    name: "welcome"
    GridLayout:
        cols: 1
        size: root.width, root.height
        Label:
            text: "Welcome to SanoHealth!!!!!"
        Label:
            text: "Please make an account or if you already have one sign in :)"
        Button:
            text: " Create an account"
            background_color: 0,.8,.8, 1
            on_release: 
                app.root.current = "create"
                root.manager.transition.direction = "left"
        Button:
            text: " Log in" 
            background_color: 0,.8,.8, 1
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "left"
        Button:
            text: " Log in with Google" 
            background_color: 1,0,0, 1
        Button:
            text: " Log in with Facebook" 
            background_color: 0,0,1, 1
        Button:
            text: " About SanoHealth" 
            background_color: .69,.61,.85, 1
            on_release:
                app.root.current = "about"
                root.manager.transition.direction = "left"

<About>
    name: "about"
    GridLayout:
        cols: 1
        Label:
            text: "         SanoHealth is a health and wellness app that utilizes features\n such as location-based contact-tracing, SMS alerts, wellness evaluations, and health activities\n in order to help users keep track of their health, fitness, and consumption\n during these unpresedented times."
        Label:
            text: "         The SanoHealth app was created by Christiana Marchese and Rachel Homan\nfor the A2CN Hack-In-Place Hackathon, and it was inspired by a previous contact-tracing app \n created by Christiana, Rachel, and their friend Saatvik Kher: HenHealth."
        Label:
            text: "         The intention of this app is to make it easy for people to focus on\n health and wellness during these times of uncertainty and shelter-in-place orders\n we at SanoHealth hope that are app enables and empowers users to take back control over their life\n and everyday habits."
        Button:
            text: "Back to Welcome Screen" 
            background_color: 0,.8,.8, 1
            on_release:
                app.root.current = "welcome"
                root.manager.transition.direction = "right"
            
<Create>
    name: "create"
    firstname: firstname
    lastname: lastname
    phone: phone
    username: username
    password: password
    passwordCheck: passwordCheck

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Firstname: "
            TextInput:
                id: firstname
                multiline:False
            Label:
                text: "Lastname: "
            TextInput:
                id: lastname
                multiline:False
            Label:
                text: "Phone Number: "
            TextInput:
                id: phone
                multiline:False
            Label:
                text: "Username: "
            TextInput:
                id: username
                multiline:False
            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline:False
            Label:
                text: "Confirm Password: "
            TextInput:
                id: passwordCheck
                multiline:False
        
        Button:
            text: "Already have an account? Click here."
            background_color: 0,.8,.8, 1
            size_hint: .1,.3
            on_release: app.root.current = "login"

        Button:
            text: "Submit"
            background_color: 0,.8,.8, 1
            size_hint: .2,.4
            on_press: root.submit()
            on_release: app.root.current = "menu"

