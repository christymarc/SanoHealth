    name: "alert"
    username: username

    GridLayout:
        cols: 1
        size: root.width, root.height
        
        Label:
            text: "If you have tested positive for COVID-19, insert your username\nand press the red button to alert all the users you have\nbeen in contact with in the past 2 weeks."
        
        GridLayout:
            cols:2
            Label:
                text: "Username: "
                size_hint: .6, .1
                pos_hint: {"x": .2, "top": 1}
            TextInput:
                id: username
                multiline:False
                size_hint: .6, .2
                pos_hint: {"x": .2, "top": 1}

        Button:
            text: "Alert Friends"
            background_color: 1,0,0
            size_hint: .1,.3
            on_release: root.redbtn()

        Button:
            text: "Back to Menu"
            background_color:  0,.8,.8, 1
            size_hint: .1,.3
            on_release: 
                app.root.current = "menu"
                root.manager.transition.direction = "right"
        AsyncImage:
            source: "https://magazine.pomona.edu/wp-content/images/blogs/pomoniana-default.jpg"
